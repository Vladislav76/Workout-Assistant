<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <import type="com.vladislav.workoutassistant.data.db.converter.DateConverter" />

        <variable
            name="viewModel"
            type="com.vladislav.workoutassistant.viewmodels.DiaryEntryViewModel" />

        <variable
            name="fragment"
            type="com.vladislav.workoutassistant.ui.WorkoutDetailsFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                tools:context=".ui.activities.WorkoutDetailsActivity">

                <TextView
                    android:id="@+id/title_label"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/title_field"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="@{viewModel.entry.isDefaultTitleChecked() ? viewModel.entry.defaultTitle : viewModel.entry.title}"
                    android:focusable="@{viewModel.entry.isDefaultTitleChecked() ? false : true}"
                    android:focusableInTouchMode="@{viewModel.entry.isDefaultTitleChecked() ? false : true}"
                    android:afterTextChanged="@{(s) -> !viewModel.entry.isDefaultTitleChecked() ? viewModel.setTitle(s.toString()) : null}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_label" />

                <CheckBox
                    android:id="@+id/default_title_check_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/default_label"
                    android:onClick="@{() -> viewModel.setDefaultTitleChecked(!viewModel.entry.isDefaultTitleChecked())}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_field" />

                <TextView
                    android:id="@+id/date_and_time_label"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/date_and_time_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/default_title_check_field" />

                <ImageButton
                    android:id="@+id/date_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:onClick="@{fragment::onDateOrTimeButtonClicked}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_and_time_label"
                    app:srcCompat="@drawable/ic_date_range_black_32dp" />

                <TextView
                    android:id="@+id/date_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/date_hint"
                    android:text="@{DateConverter.dateToString(viewModel.entry.date)}"
                    app:layout_constraintBottom_toBottomOf="@+id/date_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/date_button"
                    app:layout_constraintTop_toTopOf="@+id/date_button" />

                <ImageButton
                    android:id="@+id/start_time_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:onClick="@{fragment::onDateOrTimeButtonClicked}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_button"
                    app:srcCompat="@drawable/ic_access_time_black_32dp" />

                <TextView
                    android:id="@+id/start_time_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:hint="@string/start_time_hint"
                    android:text="@{DateConverter.timeToString(viewModel.entry.startTime)}"
                    app:layout_constraintBottom_toBottomOf="@+id/start_time_button"
                    app:layout_constraintStart_toEndOf="@+id/start_time_button"
                    app:layout_constraintTop_toTopOf="@+id/start_time_button" />

                <ImageButton
                    android:id="@+id/finish_time_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:onClick="@{fragment::onDateOrTimeButtonClicked}"
                    app:layout_constraintBottom_toBottomOf="@+id/start_time_button"
                    app:layout_constraintStart_toEndOf="@+id/start_time_field"
                    app:layout_constraintTop_toTopOf="@+id/start_time_button"
                    app:srcCompat="@drawable/ic_access_time_black_32dp" />

                <TextView
                    android:id="@+id/finish_time_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:hint="@string/finish_time_hint"
                    android:text="@{DateConverter.timeToString(viewModel.entry.finishTime)}"
                    app:layout_constraintBottom_toBottomOf="@+id/finish_time_button"
                    app:layout_constraintStart_toEndOf="@+id/finish_time_button"
                    app:layout_constraintTop_toTopOf="@+id/finish_time_button" />

                <TextView
                    android:id="@+id/duration_label"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/time_duration_label"
                    android:visibility="@{viewModel.entry.startTime == null || viewModel.entry.finishTime == null ? View.GONE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/start_time_button" />

                <TextView
                    android:id="@+id/duration_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:hint="@string/time_duration_hint"
                    android:text="@{DateConverter.durationToString(viewModel.entry.duration)}"
                    android:visibility="@{viewModel.entry.startTime == null || viewModel.entry.finishTime == null ? View.GONE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration_label" />

                <TextView
                    android:id="@+id/muscle_groups_label"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/muscle_groups_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration_field" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/muscle_groups_chips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/muscle_groups_label">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/muscle_groups_editing_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/muscle_groups_editing_action"
                        android:onClick="@{fragment::onMuscleGroupsEditingClicked}"
                        app:chipIcon="@drawable/ic_edit_black_32dp" />
                </com.google.android.material.chip.ChipGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>