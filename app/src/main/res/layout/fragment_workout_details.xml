<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.vladislav.workoutassistant.viewmodel.DiaryEntryViewModel" />
        <variable
            name="fragment"
            type="com.vladislav.workoutassistant.view.fragments.WorkoutDetailsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.WorkoutDetailsActivity">

        <TextView
            android:id="@+id/title_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/title_label"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/title_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/title_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_label"
            app:layout_constraintTop_toTopOf="@+id/title_label" />

        <TextView
            android:id="@+id/date_and_time_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/date_and_time_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_label" />

        <ImageButton
            android:id="@+id/date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="@{fragment::onDateOrTimeButtonClicked}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_and_time_label"
            app:srcCompat="@drawable/ic_event_black_24dp" />

        <TextView
            android:id="@+id/date_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{viewModel.date}"
            android:hint="@string/date_hint"
            app:layout_constraintBottom_toBottomOf="@+id/date_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_button"
            app:layout_constraintTop_toTopOf="@+id/date_button" />

        <ImageButton
            android:id="@+id/start_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="@{fragment::onDateOrTimeButtonClicked}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_button"
            app:srcCompat="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/start_time_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.startTime}"
            android:hint="@string/start_time_hint"
            app:layout_constraintBottom_toBottomOf="@+id/start_time_button"
            app:layout_constraintStart_toEndOf="@+id/start_time_button"
            app:layout_constraintTop_toTopOf="@+id/start_time_button" />

        <ImageButton
            android:id="@+id/finish_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:onClick="@{fragment::onDateOrTimeButtonClicked}"
            app:layout_constraintBottom_toBottomOf="@+id/start_time_button"
            app:layout_constraintStart_toEndOf="@+id/start_time_field"
            app:layout_constraintTop_toTopOf="@+id/start_time_button"
            app:srcCompat="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/finish_time_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.finishTime}"
            android:hint="@string/finish_time_hint"
            app:layout_constraintBottom_toBottomOf="@+id/finish_time_button"
            app:layout_constraintStart_toEndOf="@+id/finish_time_button"
            app:layout_constraintTop_toTopOf="@+id/finish_time_button" />

        <TextView
            android:id="@+id/duration_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/time_duration_label"
            android:visibility="@{viewModel.startTime == null || viewModel.finishTime == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_time_button" />

        <TextView
            android:id="@+id/duration_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.duration}"
            android:hint="@string/time_duration_hint"
            android:visibility="@{viewModel.startTime == null || viewModel.finishTime == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/duration_label" />

        <TextView
            android:id="@+id/muscle_groups_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/muscle_groups_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/duration_field" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/muscle_groups_chips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muscle_groups_label" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>