<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="com.vladislav.workoutassistant.data.db.converter.StringConverter" />

        <variable
            name="callback"
            type="com.vladislav.workoutassistant.ui.main.interfaces.OnDiaryEntryClickCallback" />

        <variable
            name="viewModel"
            type="com.vladislav.workoutassistant.ui.diary.viewmodels.DiaryEntryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:background="@color/white"
        android:onClick="@{() -> callback.onClick(viewModel, viewModel.entry.name)}">

        <CheckBox
            android:id="@+id/selection_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:checked="@{viewModel.entry.selected}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_field"
            style="@style/BoldTextStyle"
            android:layout_marginStart="16dp"
            tools:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selection_checkbox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@{StringConverter.INSTANCE.dateToString(viewModel.entry.date)}"
            tools:text="22.2017"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_field"
            app:layout_constraintTop_toBottomOf="@id/title_field" />

        <TextView
            android:id="@+id/title_field"
            style="@style/BoldTextStyle"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:text="@{viewModel.entry.name}"
            tools:text="Workout 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_field"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/duration_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{StringConverter.INSTANCE.durationToString(viewModel.entry.duration)}'
            tools:text="00:00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/date_field" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>