<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="name"
            type="String"/>
        <variable
            name="selected"
            type="boolean"/>
        <variable
            name="count"
            type="int"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeight"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?selectableItemBackground">

        <ImageView
            android:id="@+id/exercise_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/rounded_rectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="@{selected ? View.VISIBLE : View.GONE}"
            app:srcCompat="@drawable/ic_check_circle_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/exercise_name_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:text="@{name}"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            tools:text="Exercise 1"
            app:layout_constraintStart_toEndOf="@id/exercise_icon"
            app:layout_constraintEnd_toStartOf="@id/exercise_count_field"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/exercise_count_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:visibility="@{selected ? View.VISIBLE : View.GONE}"
            android:text='@{"x" + Integer.toString(count)}'
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:singleLine="true"
            tools:text="x100"
            app:layout_constraintStart_toEndOf="@id/exercise_name_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>