<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include android:id="@+id/reps_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/weight_panel"
        layout="@layout/plus_minus_input_panel"/>

    <include android:id="@+id/weight_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reps_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/plus_minus_input_panel"/>
</androidx.constraintlayout.widget.ConstraintLayout>